{
  "compilerOptions": {
    "module": "nodenext",
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,

    "declaration": true,
    "declarationMap": true,
    "outDir": "lib",

    "strict": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["src/**/*.ts"]
}
